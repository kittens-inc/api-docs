          "isEncrypted": {
            "name": "isEncrypted",
            "type": "boolean",
            "required": false,
            "description": "Whether paste is encrypted (default: false)",
            "example": false
          },
          "expiresIn": {
            "name": "expiresIn",
            "type": "number",
